<h1>Show user information</h1>


<fieldset disabled>
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" value="<%= @user.name %>" class="form-control">
  </div>
  <div class="form-group">
    <label for="name">Surnames</label>
    <input type="text" value="<%= @user.surnames %>" class="form-control">
  </div>
  <div class="form-group">
    <label for="name">Email</label>
    <input type="text" value="<%= @user.email %>" class="form-control">
  </div>
  <div class="form-group">
    <label for="name">Password</label>
    <input type="text" value="<%= @user.password %>" class="form-control">
  </div>
</fieldset>
<div class="btn-group" role="group" >
  <%= link_to 'Edit',edit_user_path(@user),:class => 'btn btn-primary' %>
  <button type="button" class="btn btn-danger">Delete</button>
</div>